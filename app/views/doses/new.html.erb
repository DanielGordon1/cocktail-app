<h1>Doses#new</h1>
<p>Find me in app/views/doses/new.html.erb</p>

<h1> Add a new Ingredient to <%= @cocktail.name %></h1>


<%= simple_form_for [:cocktail, @dose] do |f| %>
<%=  f.input :description %>
<%= f.collection_select(:ingredient_id, @available_ingredients, :id, :name) %>
<%= f.submit  %>
<% end %>

<%= link_to 'Back to Cocktail', cocktail_path(@cocktail) %>