<div class='container text-center'>
<h1>You selected: <%= @cocktail.name %></h1>

<button type="button"><%= link_to "Add a new ingredient to this cocktail", new_cocktail_dose_path(@cocktail) %></button>

<ul>
<% @cocktail.doses.each do |dose| %>
<li><%=  dose.description %>    <%= Ingredient.find(dose.ingredient_id).name %></li>


<% end %>
</ul>
